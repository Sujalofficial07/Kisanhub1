<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/typeInput" android:hint="Type (income/expense)"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/amountInput" android:hint="Amount"
        android:inputType="numberDecimal"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/descInput" android:hint="Description"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/saveBtn" android:text="Save"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
